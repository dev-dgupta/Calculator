<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E1E1"
    android:visibility="visible"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/digitEditText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:alpha="1"
        android:background="@color/white"
        android:editable="true"
        android:ems="10"
        android:gravity="right"
        android:hint="0"
        android:inputType="number|text|numberDecimal"
        android:numeric="decimal"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn2"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/multiplyBtn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="multiply"
        android:text="*"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/backspaceBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digitEditText" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="316dp"
        android:layout_marginLeft="316dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="add"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minusBtn" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn7"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remainderBtn" />

    <Button
        android:id="@+id/divideBtn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="316dp"
        android:layout_marginLeft="316dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="divide"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backspaceBtn" />

    <Button
        android:id="@+id/equalsBtn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="316dp"
        android:layout_marginLeft="316dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="equals"
        android:text="="
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/multiplyBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plusBtn" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn5"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn4"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="316dp"
        android:layout_marginLeft="316dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="subtract"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divideBtn" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn0"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/equalsBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/backspaceBtn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="316dp"
        android:layout_marginLeft="316dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="backspace"
        android:text="BKS"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digitEditText" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn9"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/divideBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiplyBtn" />

    <Button
        android:id="@+id/decimalBtn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="decimal"
        android:text="."
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/multiplyBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digitEditText" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn6"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/minusBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn1"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/clrBtn"
        android:layout_width="188dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:gravity="center_horizontal|fill_vertical"
        android:onClick="clr"
        android:text="CLR"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn8"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decimalBtn" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="btn3"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/plusBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/remainderBtn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="remainder"
        android:text="%"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/decimalBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digitEditText" />

    <TextView
        android:id="@+id/textToShow"
        android:layout_width="193dp"
        android:layout_height="22dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:alpha="0.8"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>